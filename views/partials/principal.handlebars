    <div id="msj" class="mensajes flexCol">
        <h2>Centro de Mensajes</h2>
        <h2 id="compresion"></h2>
        <div class="centro ">
            <form class="flexCol contentCenter" onsubmit='return agregarMensaje(this)'>
                <div class="flexCol inicio">

                    <label for="email">Email</label>
                    <input id='email' type="email" required name="email" placeholder="abcd@gmail.com" value="{{{email}}}">

                    <label for="nombre">Nombre</label>
                    <input id='nombre' type="text" required name="nombre" placeholder="Juan" value="{{{nombre}}}">

                    <label for="apellido">Apellido</label>
                    <input id='apellido' type="text" required name="apellido" placeholder="Perez" value="{{{apellido}}}">

                    <label for="edad">Edad</label>
                    <input id='edad' type="number" required name="edad" placeholder="34" value="{{{edad}}}">

                    <label for="alias">Alias</label>
                    <input id='alias' type="text" required name="alias" placeholder="Juanito" value="Alias">

                    <label for="avatar">Avatar</label>
                    <input id='avatar' type="text" value="./img/avatares/{{{urlImagen}}}" required name="avatar" placeholder="Perez">
                </div>

                <div id='conversacion' class="flexCol "></div>
                <div class="labelMensaje flexCol">
                    <label for="mensaje">Mensaje</label>
                    <div class="flexRow">
                        <input id='mensaje' type="text" placeholder="Escriba aquÃ­ su mensaje" name="mensaje" value="Mensaje de prueba">        
                        <button>Enviar</button>
                    </div>
                </div>
